{
  "id": "page",
  "label": "Page",
  "format": "page",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "uid": {
        "type": "UID",
        "config": {
          "label": "UID",
          "placeholder": ""
        }
      },
      "title": {
        "type": "StructuredText",
        "config": {
          "label": "Title",
          "placeholder": "",
          "allowTargetBlank": true,
          "single": "heading1"
        }
      },
      "parent": {
        "type": "Link",
        "config": {
          "label": "Parent",
          "select": "document",
          "customtypes": ["page"]
        }
      },
      "category": {
        "type": "Select",
        "config": {
          "label": "Category",
          "placeholder": "請選擇頁面類型",
          "options": ["default", "product"],
          "default_value": "default"
        }
      },
      "slices": {
        "type": "Slices",
        "fieldset": "Slice Zone",
        "config": {
          "choices": {
            "feature_description": {
              "type": "SharedSlice"
            },
            "product_list": {
              "type": "SharedSlice"
            },
            "logos_carousel": {
              "type": "SharedSlice"
            },
            "hero": {
              "type": "SharedSlice"
            },
            "quote": {
              "type": "SharedSlice"
            },
            "text": {
              "type": "SharedSlice"
            },
            "image": {
              "type": "SharedSlice"
            },
            "image_cards": {
              "type": "SharedSlice"
            },
            "text_with_image": {
              "type": "SharedSlice"
            }
          }
        }
      }
    },
    "SeoMeta": {
      "description": {
        "type": "Text",
        "config": {
          "label": "description",
          "placeholder": ""
        }
      },
      "og_url": {
        "type": "Text",
        "config": {
          "label": "og:url",
          "placeholder": ""
        }
      },
      "og_title": {
        "type": "Text",
        "config": {
          "label": "og:title",
          "placeholder": ""
        }
      },
      "og_description": {
        "type": "Text",
        "config": {
          "label": "og:description",
          "placeholder": ""
        }
      },
      "og_image": {
        "type": "Image",
        "config": {
          "label": "og:image",
          "constraint": {},
          "thumbnails": []
        }
      },
      "og_type": {
        "type": "Select",
        "config": {
          "label": "og:type",
          "placeholder": "",
          "options": ["article", "website"],
          "default_value": "article"
        }
      }
    }
  }
}
